<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		app:cardCornerRadius="4dp"
		android:layout_alignParentTop="true"
		android:layout_above="@id/bottom">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<EditText
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:hint="Nazwa leku"
					android:inputType="text"
					android:imeOptions="actionDone"
					android:textColor="@color/active_text"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:id="@+id/medicineName" />

				<TextView
					android:text="Dawka:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/static_text" />

				<EditText
					android:text="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:hint=""
					android:inputType="number"
					android:imeOptions="actionDone"
					android:maxLength="1"
					android:selectAllOnFocus="true"
					android:textColor="@color/active_text"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="50dp"
					android:id="@+id/medicineCount" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:orientation="horizontal">

				<TextView
					android:text="Początek:"
					android:layout_width="0dp"
					android:layout_weight="35"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/static_text" />

				<TextView
					android:text="Data początku"
					android:layout_width="0dp"
					android:layout_weight="65"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/medicineStartDate" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:orientation="horizontal">

				<TextView
					android:text="Koniec:"
					android:layout_width="0dp"
					android:layout_weight="35"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@color/static_text" />

				<TextView
					android:text="Data końca"
					android:layout_width="0dp"
					android:layout_weight="65"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/medicineEndDate" />
			</LinearLayout>

			<TextView
				android:text="Powtórz:"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:layout_marginLeft="5dp"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="@color/static_text" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:orientation="horizontal">

				<TextView
					android:text="Pn"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineMonday" />

				<TextView
					android:text="Wt"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineTuesday" />

				<TextView
					android:text="Śr"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineWednesday" />

				<TextView
					android:text="Cz"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineThursday" />

				<TextView
					android:text="Pt"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineFriday" />

				<TextView
					android:text="Sb"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineSaturday" />

				<TextView
					android:text="Nd"
					android:layout_width="0dp"
					android:layout_weight="10"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/active_text"
					android:id="@+id/labelMedicineSunday" />
			</LinearLayout>

			<TextView
				android:text="Ile razy dziennie:"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:layout_marginLeft="5dp"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="@color/static_text"
				android:id="@+id/labelFrequency" />

			<SeekBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="8"
				android:min="1"
				android:progress="3"
				android:id="@+id/medicineFrequency"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:layout_marginBottom="7dp"
				android:orientation="horizontal">

				<TextView
					android:text="Wybierz godziny:"
					android:layout_width="0dp"
					android:layout_weight="45"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:textColor="@color/static_text"
					android:textSize="18sp"
					android:textStyle="bold" />

				<ListView
					android:divider="#818181"
					android:dividerHeight="1dp"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="55"
					android:id="@+id/listViewMedicine" />
			</LinearLayout>	
		</LinearLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="5dp"
		app:cardCornerRadius="4dp"
		android:id="@+id/bottom">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:text="Anuluj"
				android:layout_width="0dp"
				android:layout_weight="50"
				android:layout_height="wrap_content"
				android:background="@color/card_button_background"
				android:textColor="@color/card_button_text"
				android:textStyle="bold"
				android:id="@+id/buttonCancel" />

			<View
				android:layout_width="2dp"
				android:layout_height="match_parent"
				android:background="#FFFFFF"/>

			<Button
				android:text="Dodaj"
				android:layout_width="0dp"
				android:layout_weight="50"
				android:layout_height="wrap_content"
				android:background="@color/card_button_background"
				android:textColor="@color/card_button_text"
				android:textStyle="bold"
				android:id="@+id/buttonAdd" />
		</LinearLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>
