<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#039BE5</item>
    <item name="colorPrimaryDark">#026899</item>
    <item name="android:itemBackground">#0376b0</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
    <item name="colorAccent">#02547E</item>
    <item name="android:textColor">#002466</item>
    <item name="android:timePickerStyle">@style/SpinnerTimePicker</item>
    <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    <item name="android:listViewStyle">@style/ListFont</item>
  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#f5f5f5</item>
    <item name="spinBars">true</item>
  </style>

  <style name="SpinnerTimePicker" parent="android:Widget.Material.Light.TimePicker">
    <item name="android:timePickerMode">spinner</item>
  </style>

  <style name="SpinnerDatePicker" parent="android:Widget.Material.Light.DatePicker">
    <item name="android:datePickerMode">spinner</item>
  </style>

  <style name="ListFont" parent="@android:style/Widget.ListView">
    <item name="android:textColor">#000000</item>
    <item name="android:typeface">sans</item>
  </style>
  
</resources>